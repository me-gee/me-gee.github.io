{
  "name": "hyeji-portfolio",
  "version": "1.0.0",
  "description": "HYEJI Portfolio with SCSS",
  "main": "index.html",
  "scripts": {
    "build": "sass assets/css/style.scss assets/css/style.css --style compressed",
    "watch": "sass assets/css/style.scss assets/css/style.css --watch",
    "dev": "sass assets/css/style.scss assets/css/style.css --watch --style expanded",
    "deploy": "npm run build && git add . && git commit -m 'Auto-update portfolio' && git push origin main",
    "auto": "npm run build && git add . && git commit -m 'Auto-update: $(date)' && git push origin main",
    "quick": "./quick-deploy.sh"
  },
  "keywords": ["portfolio", "scss", "frontend"],
  "author": "HYEJI",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.69.0"
  }
} 